@page
@model ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h3 class="text-center">Reset Password</h3>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.Password"></label>
                    <input asp-for="ViewModel.Password" class="form-control" />
                    <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ViewModel.ConfirmPassword"></label>
                    <input asp-for="ViewModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ViewModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="ViewModel.Email" />
                <input type="hidden" asp-for="ViewModel.Token" />

                <button type="submit" class="btn btn-primary w-100">Reset My Password</button>
            </form>
        </div>
    </div>
</body>
</html>
