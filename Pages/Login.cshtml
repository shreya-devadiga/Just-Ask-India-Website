@page
@model JustAskIndia.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 2rem;
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        margin-bottom: 1rem;
    }

    .error-message {
        color: red;
        margin-top: 1rem;
        font-size: 0.9rem;
    }

    .forgot-link {
        display: block;
        margin-top: 1rem;
        text-align: center;
    }
</style>

<div class="login-container">
    <h2 class="text-center mb-4">Login</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Username">Username or Email</label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="error-message">@Model.Message</div>
        }

        <div class="d-flex justify-content-between mt-3">
            <a asp-page="/ForgotPassword">Forgot your password?</a>
            <span>New User? <a asp-page="/Register">Register</a></span>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
